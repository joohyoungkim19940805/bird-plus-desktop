{
    "compilerOptions": {
		"moduleResolution": "Node",
    	"noImplicitAny": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"isolatedModules": true,
		"target": "es5",
		"lib": [
		  "dom",
		  "DOM", 
		  "DOM.Iterable",
		  "ES2015",
		  "ES2016",
		  "ES2017",
		  "ES2018",
		  "ES2019",
		  "ES2020",
		  "esnext"
		],
    	"outDir": "view/js/ts",
		"baseUrl": ".",
    	"paths": {
    		"*": ["node_modules/*"]
    	},
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": [
		"view/js/handler/*.ts",
    	"view/js/handler/**/*.ts"
    ]
}